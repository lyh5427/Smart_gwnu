<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manager_h">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/dateView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="2021.12.11\n(담당: 이형원 교수)"
                android:gravity="center"/>


            <TextView
                android:id="@+id/buildingName2"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="건물 분류" />
            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="363dp"/>
            <org.eazegraph.lib.charts.BarChart
                android:id="@+id/dayStick"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                app:egBarWidth="20dp"
                app:egEnableScroll="true"
                app:egFixedBarWidth="true"
                app:egLegendHeight="40dp"
                app:egShowDecimal="true" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <org.eazegraph.lib.charts.BarChart
                    android:id="@+id/stick"
                    android:layout_width="match_parent"
                    android:layout_height="256dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp"
                    app:egBarWidth="20dp"
                    app:egEnableScroll="true"
                    app:egFixedBarWidth="true"
                    app:egLegendHeight="40dp"
                    app:egShowDecimal="true" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id = "@+id/circle2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                </com.github.mikephil.charting.charts.PieChart>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시작일" />

                <EditText
                    android:id="@+id/startYear"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:ems="10"
                    android:inputType="date"
                    android:text = ""/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="년" />

                <EditText
                    android:id="@+id/startMonth"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:ems="10"
                    android:inputType="date"
                    android:text = ""/>

                <TextView
                    android:id="@+id/textView102"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="월" />

                <EditText
                    android:id="@+id/startDate"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:ems="10"
                    android:inputType="date"
                    android:text = ""/>

                <TextView
                    android:id="@+id/textView101"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="일" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종료일" />

                <EditText
                    android:id="@+id/endYear"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:ems="10"
                    android:inputType="date"
                    android:text = ""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="년" />

                <EditText
                    android:id="@+id/endMonth"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:ems="10"
                    android:inputType="date"
                    android:text = ""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="월" />

                <EditText
                    android:id="@+id/endDate"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:ems="10"
                    android:inputType="date"
                    android:text = ""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="일" />
            </LinearLayout>
            <Button
                android:id="@+id/post_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="날짜별 통계 보기" />
        </LinearLayout>
    </ScrollView>



</FrameLayout>