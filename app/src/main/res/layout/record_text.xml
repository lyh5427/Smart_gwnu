<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginHorizontal="10sp"
    android:layout_marginTop="10sp"
    android:background="#FFFFFF"
    android:elevation="5dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/record_time"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10sp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/record_time"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/record_username"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10sp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/record_username"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/record_building"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10sp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/record_building"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/arrow_navigate"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="TODO"
        android:padding="15sp"
        app:srcCompat="@drawable/arrow_navigate" />
</LinearLayout>